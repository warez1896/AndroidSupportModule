<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.SupportModule" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!--Main-->
        <!--        <item name="android:fontFamily">@font/san_francisco</item>-->
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:windowBackground">@color/bg</item>
        <item name="android:textSize">@dimen/standard_text</item>
        <item name="android:textColor">@color/subtext_std</item>
        <item name="android:buttonStyle">@style/btn_std</item>
        <item name="android:dropDownListViewStyle">@style/spinner_dialog_window</item>
        <item name="editTextStyle">@style/text_box</item>
        <item name="autoCompleteTextViewStyle">@style/actext_box</item>
        <item name="spinnerStyle">@style/spinner</item>
        <item name="buttonBarPositiveButtonStyle">@style/alert_btn_green</item>
        <item name="buttonBarNegativeButtonStyle">@style/alert_btn_red</item>
        <item name="buttonBarNeutralButtonStyle">@style/alert_btn_std</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/alert_btn_green</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/alert_btn_red</item>
        <item name="android:buttonBarNeutralButtonStyle">@style/alert_btn_std</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bg</item>
        <item name="colorPrimaryVariant">@color/bg</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/bg</item>
        <item name="colorSecondaryVariant">@color/bg</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!--        <item name="android:statusBarColor" tools:targetApi="l">?attr/transpa</item>-->
    </style>
    <!-- Customize your theme here. -->
    <style name="alert_btn_std" parent="btn_std">
        <item name="android:paddingTop">@dimen/dynamic_8</item>
        <item name="android:paddingBottom">@dimen/dynamic_8</item>
    </style>

    <style name="alert_btn_red" parent="btn_red">
        <item name="android:layout_marginEnd">@dimen/dynamic_8</item>
        <item name="android:paddingTop">@dimen/dynamic_8</item>
        <item name="android:paddingBottom">@dimen/dynamic_8</item>
    </style>

    <style name="spinner_dropdown" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">@drawable/empty_divider_12</item>
        <item name="android:dividerHeight">@dimen/dynamic_12</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="spinner_dialog_window">
        <item name="android:divider">@drawable/empty_divider_12</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="alert_btn_green" parent="btn_green">
        <item name="android:layout_marginStart">@dimen/dynamic_8</item>
        <item name="android:paddingTop">@dimen/dynamic_8</item>
        <item name="android:paddingBottom">@dimen/dynamic_8</item>
    </style>

    <style name="element_base">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="btn" parent="element_base">
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/btn_padding</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="text_box" parent="android:Widget.EditText">
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/text_box</item>
        <item name="android:padding">@dimen/btn_padding</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="actext_box" parent="android:Widget.AutoCompleteTextView">
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/text_box</item>
        <item name="android:padding">@dimen/btn_padding</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="spinner" parent="android:Widget.Spinner">
        <item name="android:minHeight">0dp</item>
        <item name="android:textColor">@color/text_std</item>
        <item name="android:background">@drawable/text_box</item>
        <item name="android:padding">@dimen/btn_padding</item>
        <item name="android:gravity">start</item>
    </style>

    <!--SOLID-->
    <style name="btn_red" parent="btn">
        <item name="android:textColor">@drawable/text_state_red</item>
        <item name="android:background">@drawable/btn_state_red</item>
    </style>

    <style name="btn_green" parent="btn">
        <item name="android:background">@drawable/btn_state_green</item>
        <item name="android:textColor">@drawable/text_state_green</item>
    </style>

    <style name="btn_std" parent="btn">
        <item name="android:background">@drawable/btn_state_std</item>
        <item name="android:textColor">@drawable/text_state_std</item>
    </style>

    <!--END SOLID-->

    <style name="jumbotron" parent="element_base">
        <item name="android:background">@drawable/jumbotron</item>
        <item name="android:padding">@dimen/dynamic_16</item>
    </style>

    <style name="jumbotron.red">
        <item name="android:background">@drawable/card_red</item>
    </style>

    <style name="jumbotron.green">
        <item name="android:background">@drawable/card_green</item>
    </style>

    <style name="jumbotron.outline" parent="element_base">
        <item name="android:background">@drawable/jumbotron_outline</item>
        <item name="android:padding">@dimen/dynamic_16</item>
    </style>

    <style name="jumbotron.outline.filled" parent="element_base">
        <item name="android:background">@drawable/jumbotron_outline_filled</item>
        <item name="android:padding">@dimen/dynamic_16</item>
    </style>

    <style name="jumbotron.padless" parent="element_base">
        <!--        <item name="android:background">@drawable/jumbotron</item>-->
        <item name="android:padding">0dp</item>
    </style>

    <style name="card_std" parent="element_base">
        <item name="android:background">@drawable/card_std</item>
        <item name="android:padding">@dimen/dynamic_16</item>
    </style>

    <style name="card_std.action">
        <item name="android:background">@drawable/btn_state_std</item>
    </style>

    <style name="card_red" parent="element_base">
        <item name="android:background">@drawable/card_red</item>
        <item name="android:padding">@dimen/dynamic_16</item>
    </style>

    <style name="card_red.action">
        <item name="android:background">@drawable/btn_state_red</item>
    </style>

    <style name="card_green" parent="element_base">
        <item name="android:background">@drawable/card_green</item>
        <item name="android:padding">@dimen/dynamic_16</item>
    </style>

    <style name="card_green.action">
        <item name="android:background">@drawable/btn_state_green</item>
    </style>
    <!--END ROUNDED-->

    <style name="header">
        <item name="android:textColor">@color/text_std</item>
        <item name="android:textSize">@dimen/t1</item>
    </style>

    <style name="sub_header">
        <item name="android:textColor">@color/text_std</item>
        <item name="android:textSize">@dimen/t5</item>
    </style>

    <style name="sub_text">
        <item name="android:textSize">@dimen/t6</item>
    </style>
</resources>